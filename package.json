{
	"name": "cognite-ts",
	"private": true,
	"description": "TypeScript tools and utilities for building applications on Cognite Data Fusion",
	"packageManager": "pnpm@10.12.0",
	"scripts": {
		"build": "turbo run build",
		"test": "turbo run test",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^8.35.0",
		"@typescript-eslint/parser": "^8.35.0",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.5.1",
		"prettier": "^3.6.1",
		"turbo": "^2.5.4",
		"typescript": "^5.8.3"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/cognitedata/cognite-ts.git"
	}
}
