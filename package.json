{
	"name": "@omnysecurity/cognite-ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/omnysecurity/cognite-ts.git"
	},
	"private": true,
	"description": "TypeScript tools and utilities for building applications on Cognite Data Fusion",
	"license": "Apache-2.0 (modified for redistribution)",
	"type": "module",
	"packageManager": "pnpm@10.12.0",
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"build": "pnpm --recursive --filter \"./packages/**/*\" run build",
		"check": "pnpm --recursive --filter \"./packages/**/*\" exec tsc",
		"test": "vitest --run",
		"lint": "eslint",
		"lint:fix": "pnpm lint --fix",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"changeset": "changeset",
		"version-packages": "changeset version",
		"release": "pnpm build && changeset publish"
	},
	"workspaces": [
		"packages/codegen",
		"packages/codegen-cli",
		"packages/helpers"
	],
	"devDependencies": {
		"@changesets/cli": "^2.29.6",
		"@typescript-eslint/eslint-plugin": "^8.35.0",
		"@typescript-eslint/parser": "^8.35.0",
		"eslint": "catalog:",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"prettier": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:"
	}
}
