{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"strictBindCallApply": true,
		"noFallthroughCasesInSwitch": false,
		"baseUrl": "./",
		"outDir": "dist",
		"rootDir": "src",
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"]
}
