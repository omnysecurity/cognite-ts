{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "bundler",
		"module": "ESNext",
		"strictBindCallApply": true,
		"noFallthroughCasesInSwitch": false,
		"baseUrl": "./",
		"outDir": "dist",
		"declaration": true,
		"types": ["node"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
